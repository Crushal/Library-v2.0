<div>
    <form action="/edit-blog/<%= book._id %>?_method=PUT" method="post">
        <label for="title">Title :<label>
        <input type="text" name="title" value="<%= book.title %>">
        <label for="author">Author :</label>
        <input type="text" name="author" value="<%= book.author %>">
        <label for="pages">Pages :</label>
        <input type="number" name="pages" value="<%= book.pages %>">
        <label for="input">Read :</label>
        <input type="radio" name="read" value=<%= true %>>Read
        <input type="radio" name="read" value=<%= false %>>Not Read
        <input type="submit" value="Edit">
    </form>
</div>